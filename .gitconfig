[core]
  editor = vim
  excludesfile = ~/.gitignore
  ignorecase = false
  whitespace = blank-at-eol,cr-at-eol,tab-in-indent

[user]
  name = Graham Gilchrist
  email = git@grahamgilchrist.com

[alias]
  a = add
  br = branch
  co = checkout
  cm = commit
  df = diff
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  st = status

[color]
  branch = auto
  diff = auto
  status = auto
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = red

[color "diff"]
  frag = magenta bold
  meta = yellow
  new = green bold
  old = red bold
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[status]
  relativePaths = true

[push]
  default = simple
